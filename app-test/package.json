{
  "name": "showcase-app",
  "version": "0.0.0",
  "private": true,
  "description": "Backstage App",
  "repository": "https://github.com/janus-idp/showcase-e2e.git",
  "author": "Janus-IDP",
  "license": "Apache-2.0",
  "scripts": {
    "start": "parcel src/index.html",
    "start:server": "yarn start -p 3000",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --spec 'app-test/cypress/e2e/*.spec.ts'",
    "test:backstage-run": "yarn cypress:run",
    "test:backstage-open": "yarn cypress:open",
    "test:cypress-run": "start-server-and-test start:server http://localhost:3000 cypress:run",
    "test:cypress-open": "start-server-and-test start:server http://localhost:3000 cypress:open"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@interactors/html": "^1.0.0-rc1.4",
    "@interactors/with-cypress": "^1.0.0-rc1.2",
    "@octokit/request": "^6.2.3",
    "@testing-library/react": "^11.1.0",
    "babel-jest": "^26.6.3",
    "bigtest": "^0.16.1",
    "cypress": "^10.11.0",
    "eslint": "^7.17.0",
    "eslint-plugin-cypress": "^2.11.2",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "4.1.0",
    "octokit": "^2.0.14",
    "parcel": "^2.8.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^17.0.1",
    "start-server-and-test": "^1.11.6",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.2"
  },
  "volta": {
    "node": "14.17.5",
    "yarn": "1.22.11"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended"
    ]
  },
  "browserslist": [
    "defaults",
    "not op_mob > 1"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
    }
  }
}
